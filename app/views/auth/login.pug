extends ../layout/standard
block content
    .d-flex.justify-content-center.mt-5
        .col-md-4.mx-auto
            .card.shadow
                h4.text-secondary.text-center.my-3 Register Account
                .card-body
                    form(action="/user/login", method="post")
                        .form-group
                            label(for="email") Email
                            input.form-control(type="text",placeholder="Your@mail.com",name='username')
                        .form-group
                            label(for="password") Password
                            input.form-control(type="password",placeholder="Password",name="password")
                        .ml-auto
                            button.btn.btn-danger.mr-2(type="reset") Reset
                            button.btn.btn-info.ml-2(type="submit") Login