extends ../layout/master
block content
    .row
        .col-md-12
            .card
                .card-body
                    a.btn.btn-primary(href="/posts/new") New Post
                    table.table.table-bordere
                        thead
                            tr
                                th No
                                th Title
                                th Desc
                                th action
                        tbody
                            each post, i in posts
                                tr
                                    td=i+1
                                    td=post.title
                                    td=post.author
                                    td
                                        .d-inline.my-auto
                                            a.btn.btn-primary(href='/posts/edit/'+post._id) Update
                                            a.btn.btn-danger.delete-post(href="#",data-id=post._id) Delete

